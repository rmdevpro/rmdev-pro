---
layout: default
---
{% assign year = page.date | date: '%Y' %}
{% assign tags = page.tags | join: '' %}

{% if page._styles %}
  <!-- Conversation style -->
  <style type="text/css">
    {{ page._styles }}
    .conversation-message {
      margin: 1.5rem 0;
      padding: 1rem;
      border-left: 3px solid #e0e0e0;
    }
    .conversation-message.user {
      border-left-color: #4285f4;
    }
    .conversation-message.assistant {
      border-left-color: #34a853;
    }
    .message-role {
      font-weight: bold;
      margin-bottom: 0.5rem;
      text-transform: uppercase;
      font-size: 0.9rem;
      color: #666;
    }
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-meta">
      <i class="fa-solid fa-calendar fa-sm"></i> {{ page.date | date: '%B %d, %Y' }}
      {% if page.workflow %}
        &nbsp; &middot; &nbsp;
        <i class="fa-solid fa-diagram-project fa-sm"></i> {{ page.workflow }}
      {% endif %}
      {% if page.participants %}
        &nbsp; &middot; &nbsp;
        <i class="fa-solid fa-users fa-sm"></i> {{ page.participants | join: ', ' }}
      {% endif %}
      {% if page.message_count %}
        &nbsp; &middot; &nbsp;
        <i class="fa-solid fa-comments fa-sm"></i> {{ page.message_count }} messages
      {% endif %}
    </p>
    <p class="post-tags">
      {% if tags != '' %}
        {% for tag in page.tags %}
          <a href="{{ tag | slugify | prepend: '/conversations/tag/' | relative_url }}">
            <i class="fa-solid fa-hashtag fa-sm"></i> {{ tag }}
          </a>
          {% unless forloop.last %}
            &nbsp;
          {% endunless %}
        {% endfor %}
      {% endif %}
    </p>
  </header>

  <article class="post-content">
    {% if page.summary %}
      <div class="alert alert-info" role="alert">
        <strong>Summary:</strong> {{ page.summary }}
      </div>
    {% endif %}

    {% if page.toc and page.toc.beginning %}
      <div id="table-of-contents">
        {% toc %}
      </div>
      <hr>
    {% endif %}

    <div id="markdown-content">
      {{ content }}
    </div>
  </article>

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
